<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_navigation_setup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hammad13060.ar_app.NavigationSetupActivity">


    <TextView
        android:text="Source: Your Current Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:id="@+id/textView2" />

    <TextView
        android:text="Destination: Not Selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/destination_text_view"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Start Navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_journey_button"
        android:onClick="onStartJourney"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/destination_text_view"
        android:layout_marginBottom="94dp" />

    <Button
        android:id="@+id/select_destination_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="onSelectDestination"
        android:text="Select Destination"
        tools:text="Select Destination" />

</RelativeLayout>
